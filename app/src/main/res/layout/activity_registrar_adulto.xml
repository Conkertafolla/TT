<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.conke.tt.registrarAdulto">


    <LinearLayout
        android:id="@+id/Registro_AM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@id/nombre"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/nombre"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:labelFor="@+id/nombre" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/apellidoPaterno"
                android:layout_width="394dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/apellido_paterno"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:labelFor="@+id/apellidoPaterno" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/apellidoMaterno"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/apellido_materno"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:labelFor="@+id/apellidoMaterno" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <RadioGroup
        android:id="@+id/sexo_AM"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="2dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sexo"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <RadioButton
            android:id="@+id/sexM"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/masculino" />

        <RadioButton
            android:id="@+id/sexF"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/femenino" />

    </RadioGroup>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="361dp"
        android:layout_height="66dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Registro_AM">

        <EditText
            android:id="@+id/fecha_AM"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/selFec"
            android:layout_marginStart="45dp"
            android:layout_toEndOf="@+id/selFec"
            android:clickable="false"
            android:ems="10"
            android:focusable="true"
            android:imeOptions="actionNext"
            android:inputType="date"
            android:labelFor="@id/fecha_AM"
            android:maxLines="1"
            android:text="@string/fecha_de_nacimiento" />

        <ImageButton
            android:id="@+id/selFec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/baseline_calendar_today_black_18dp2"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sexo_AM">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="64dp"
            android:layout_toEndOf="@+id/foto_AM"
            android:text="@string/agregar_fotograf_a"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <ImageButton
            android:id="@+id/foto_AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/baseline_camera_alt_black_18dp2"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="344dp"
        android:layout_height="109dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/Registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enfermedades_AMl">

        <ImageButton
            android:id="@+id/add_enfermedad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/lista"
            tools:ignore="ContentDescription"
            tools:layout_editor_absoluteX="344dp"
            tools:layout_editor_absoluteY="38dp" />

        <ListView
            android:id="@+id/item_enfermedades"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/add_enfermedad"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/enfermedadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_enfermedades"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:labelFor="@+id/enfermedadText"
            android:text="@string/enfermedadText" />

    </RelativeLayout>

    <TextView
        android:id="@+id/enfermedades_AMl"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="261dp"
        android:layout_marginStart="8dp"
        android:text="@string/enfermedades"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

    <Button
        android:id="@+id/Registrar"
        android:layout_width="162dp"
        android:layout_height="43dp"
        android:layout_marginEnd="99dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorBoton"
        android:text="@string/registrar"
        android:textColor="@color/colorTexto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />


</android.support.constraint.ConstraintLayout>
